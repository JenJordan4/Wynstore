<div>
  Item Show
  <%= @item.item_name %>
  <br>
  <h5>Comments</h5>
  <% @item.reviews.each do |review| %>
    Comment: <%= review.comments %><br>
    Rating: <%= review.rating %>
    <br>
  <% end %>
  <hr>
  <%= form_with model: [@item, @item.reviews.build], local: true do |f|  %>
    <div>
      <label> Comments </label>
      <%= f.text_field :comments %>
    </div>
    <div>
      <label>Rating</label>
      <%= f.text_field :rating %>
    </div>
    <%= f.submit %>
  <% end %>
</div>
