<!DOCTYPE html>
<html>
  <head>
    <title>Welcome to Wynstore!</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600|Rajdhani:400,600&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <% if current_user %>
     (<%= current_user.email %>)
     <%= button_to 'Sign Out', destroy_user_session_path, method: :delete %> 
    <% else %>
    <%= link_to 'Sign In', new_user_session_path %> 
    <% end %>
    <%= yield %>

  </body>
</html>
