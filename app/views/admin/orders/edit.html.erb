<div>
    <h1>Order Details</h1>
		<p><strong>Order ID: <%= @order.id%></p>
		<p><strong>E-mail address: <%= @order.user.email %></p>
		<p><strong>Grand Total: <%= @order.total%></p>
        <%= form_with url: admin_order_path(@order), method: 'patch', local: true do |form|  %>
            <%= form.select :order_status, options_for_select(@statuses, @order.order_status_before_type_cast) %>
            <p><%= @order.created_at%></p>
            <%= form.submit 'Update Order' %>
        <% end %>
</div>
